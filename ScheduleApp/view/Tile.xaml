<UserControl x:Class="ScheduleApp.view.Tile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ScheduleApp.view"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" MouseUp="UserControl_MouseUp">
    <Grid AllowDrop="True">
        <Rectangle Fill="{Binding Path=TileColor}" Stroke="{Binding Path=TileStrokeColor}" StrokeThickness="{Binding Path=StrokeThickness}"/>
        <TextBlock Text="{Binding Path=TileText}" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="{Binding TextFontSize}"/>
    </Grid>
</UserControl>
